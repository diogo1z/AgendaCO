@model AgendaUI.Models.AcessoViewModel

@{
    ViewBag.Title = "Entrar";
}
<div id="wrapper" class="container-full" style="min-height:calc(100vh - 150px); margin:0; box-sizing:border-box;">
    <!-- Sidebar -->
    <div id="sidebar-wrapper" style="margin-top: 50px;">
        <ul class="sidebar-nav">
            @*<li class="sidebar-brand">
                    Lista
                </li>*@
            <li>
                @*<span class="glyphicon glyphicon-home" />*@
                @*<span class="glyphicon glyphicon-home" style="font-size:20px;">
                    </span>
                    &nbsp;*@Selecione a clínica
            </li>
            <li>
                Selecione a Data e Horário
            </li>
            <li>
                Usuário
            </li>
            <li>
                Paciente
            </li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->

    <div id="page-content-wrapper">
        <div class="col-md-4 col-md-offset-1" style="border-right:1px solid #d2d2d2;">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken();
                <div class="login-panel panel panel-default">

                    <div class="panel-heading">
                        <h3 class="panel-title">Login</h3>
                    </div>
                    <div class="panel-body" style="margin:10px 10px 10px 10px;">
                        <form role="form">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <fieldset>
                                <div class="form-group">
                                    @*<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>*@
                                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Usuário", autofocus = true } })
                                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @*<input class="form-control" placeholder="Password" name="password" type="password" value="">*@
                                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Senha" } })
                                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group text-right">
                                    <a href="">Esqueceu sua senha?</a>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="Acessar" class="btn btn-lg btn-success btn-block" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-6">
            <div class="login-panel text-center">
                <h3>Não tenho cadastro.</h3>                
                <h3>Desejo me cadastrar.</h3>
                <br />
                <button class="btn btn-large btn-primary-reverse text-uppercase" onclick='window.location.href("@Url.Action("CadastroPaciente")");'>Cadastre-se</button>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
</div>

<!-- /#wrapper -->
