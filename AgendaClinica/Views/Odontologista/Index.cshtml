<div class="row">
    <div class="col-lg-12">
        <button class="btn btn-md btn-success" onclick="location.href='@Url.Action("Adicionar", "Odontologista" )'"><i class="glyphicon glyphicon-plus"></i> Novo</button>
    </div>
