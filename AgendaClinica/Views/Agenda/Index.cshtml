@{
    Page.Title = "AgendaSmart - Agenda";
}

<div class="col-lg-12">
    <h1 class="page-header">Agenda</h1>
</div>
<br />
<div class="row">
    <div class="col-md-3">
        <h4>Selecione um odontologista</h4>
    </div>
    <div class="col-md-7">
        @Html.DropDownList("OdontoId", null, "Selecione", new { @class = "form-control", @id = "ddlOdonto" })
    </div>
    <div class="col-md-2">
        <button type="button" id="btnExibirAgendaOdonto" class="btn btn-md btn-default"><i class="glyphicon glyphicon-search"></i> Buscar</button>
    </div>
</div>
<hr />
<script>
    $("#btnExibirAgendaOdonto").on('click', function (evt) {
        if ($('#ddlOdonto').val() > 0) {
            location.href = '@Url.Action("Obter","Agenda" )?IdOdonto=' + $('#ddlOdonto').val();
        }
        else {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-full-width",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "30000",
                "hideDuration": "10000",
                "timeOut": "7000",
                "extendedTimeOut": "10000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            toastr['error']("Selecione um odontologista para prosseguir.", "Erro");
        }
    });
</script>
